{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Test Script",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost", // Use the same IP as debugpy.listen
                "port": 5670
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}" // adjust this if necessary
                }
            ],
            "justMyCode": false
        }
    ]
}